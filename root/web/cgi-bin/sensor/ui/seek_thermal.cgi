<div id="Image_Enhancement">
	<div>
		<table>
			<tr name="set_thermal_color">
				<td>
					<label class="subtitle width160" tkey="setup_thermal_color">Thermal Color</label>
				</td>
				<td>
					<div class="select">
						<select name="thermal_color" id="thermal_color" class='radius'>
						</select>
					</div>
				</td>
			</tr>

			<tr name="setup_thermal_flip">
				<td>
					<label class="subtitle width160" tkey="setup_fc_flip">Flip</label>
				</td>
				<td>
					<div class="select">
						<select name="thermal_flip" id="thermal_flip" class='radius'>
							<option value='0' tkey="off"></option>
							<option value='1' tkey="on"></option>
						</select>
					</div>
				</td>
			</tr>

			<tr name="setup_thermal_mirror">
				<td>
					<label class="subtitle width160" tkey="setup_fc_mirror">Flip</label>
				</td>
				<td>
					<div class="select">
						<select name="thermal_mirror" id="thermal_mirror" class='radius'>
							<option value='0' tkey="off"></option>
							<option value='1' tkey="on"></option>
						</select>
					</div>
				</td>
			</tr>

			<tr name="setup_thermal_denoise">
				<td>
					<label class="subtitle width160" tkey="setup_seekthermal_noise_red">Noise Reduction</label>
				</td>
				<td>
					<div class="select">
						<select name="thermal_denoise" id="thermal_denoise" class='radius'>
							<option value='0' tkey="off"></option>
							<option value='1' tkey="on"></option>
						</select>
					</div>
				</td>
			</tr>
<!--
			<tr name="setup_thermal_meta_data_enable">
				<td>
					<label class="subtitle width160" tkey="setup_seekthermal_meta_data_enable">Flip</label>
				</td>
				<td>
					<div class="select">
						<select name="thermal_meta_data_enable" id="thermal_meta_data_enable" class='radius'>
							<option value='0' tkey="off"></option>
							<option value='1' tkey="on"></option>
						</select>
					</div>
				</td>
			</tr>
--!>
			<tr>
				<td>
					<label class="subtitle"><span tkey="setup_seek_thermal_temperature_unit"></span></label>
				</td>
				<td>
					<div class="select">
						<select name="thermal_temperature_unit" id="thermal_temperature_unit">
							<option value="0" tkey="Celsius"></option>
							<option value="1" tkey="Fahrenheit"></option>
						</select>
					</div>
				</td>
			</tr>

		</table>
	</div>
</div>
